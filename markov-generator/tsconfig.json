{
	"compilerOptions": {
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"noImplicitAny": true,
		"lib": ["ES2020"],
		"module": "ES6",
		"moduleResolution": "node",
		"target": "ES2020",
		"baseUrl": ".",
		"skipLibCheck": true,
		"outDir": "dist",
		"paths": {
			"*": ["node_modules/*"]
		}
	},
	"include": ["src/**/*"]
}
